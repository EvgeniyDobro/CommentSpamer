<button onclick="myFunction()"> Copy Text </button>
<script>
	function myFunction() {
	  let mailOne = document.getElementById("mailOne");
	  mailOne = mailOne.value;	  
	  let qualityScan = document.getElementById("qualityScan");
	  qualityScan = qualityScan.value;
	  let mfuName = document.getElementById("mfuName");
	  mfuName = mfuName.value;
	  let mfuIp = document.getElementById("mfuIp");
	  mfuIp = mfuIp.value;
	  let result = `
Уважаемый коллега!
Выполнено добавление пользователя в адресную книгу ${mfuName} (${mfuIp})
на почтовый адрес ${mailOne}
${mailOne.split("@")[0]}-PDF-${qualityScan} кода быстрого доступа - #24
${mailOne.split("@")[0]}-JPEG-${qualityScan} кода быстрого доступа - #25`;
//	  result.select();
//	  document.execCommand("copy");
	  
    var dummy = document.createElement("textarea");
    // to avoid breaking orgain page when copying more words
    // cant copy when adding below this code
    // dummy.style.display = 'none'
    document.body.appendChild(dummy);
    //Be careful if you use texarea. setAttribute('value', value), which works with "input" does not work with "textarea". – Eduard
    dummy.value = result;
    dummy.select();
    document.execCommand("copy");
    document.body.removeChild(dummy);	 
	};
</script>


